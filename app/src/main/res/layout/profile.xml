<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingBottom="20dp"
    android:paddingTop="15dp">




    <RelativeLayout
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/imageView">

        <ImageView
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/clash_of_clans" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/free"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clash of Clans"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_toRightOf="@id/imageView"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supercell"
        android:layout_toRightOf="@id/imageView"
        android:layout_below="@id/textView3"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:textColor="#157E5C"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Есть платный контент"
        android:layout_toRightOf="@id/imageView"
        android:layout_below="@id/textView4"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        />

    <RelativeLayout
        android:id="@+id/under"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4,5"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="40dp"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/rty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_star_rate_24"
        android:layout_toRightOf="@id/textView6"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="54 млн отзывов"
        android:layout_below="@id/textView6"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_download_24"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="154 МБ"
            android:layout_centerInParent="true"
            android:layout_below="@id/imageView2"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_check_circle_outline_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выбор редакции"
            android:layout_below="@id/imageView4"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Установить"
        android:backgroundTint="#00875F"
        android:layout_below="@id/under"
        android:layout_marginTop="25dp"
        />


</RelativeLayout>